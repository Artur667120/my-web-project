<script>
    // Створення міток годинника
    const markersContainer = document.getElementById('markers');
    for (let i = 0; i < 12; i++) {
        const marker = document.createElement('div');
        marker.className = 'marker';
        marker.style.transform = `translateX(-50%) rotate(${i * 30}deg)`;
        markersContainer.appendChild(marker);
    }

    function updateClock() {
        const now = new Date();

        const hours = now.getHours();
        const minutes = now.getMinutes();
        const seconds = now.getSeconds();
        const milliseconds = now.getMilliseconds();

        const secondsTotal = seconds + milliseconds / 1000;
        const minutesTotal = minutes + secondsTotal / 60;
        const hoursTotal = (hours % 12) + minutesTotal / 60;

        const secondDeg = secondsTotal * 6;
        const minuteDeg = minutesTotal * 6;
        const hourDeg = hoursTotal * 30;

        document.getElementById("secondHand").style.transform =
            `translateX(-50%) rotate(${secondDeg}deg)`;

        document.getElementById("minuteHand").style.transform =
            `translateX(-50%) rotate(${minuteDeg}deg)`;

        document.getElementById("hourHand").style.transform =
            `translateX(-50%) rotate(${hourDeg}deg)`;

        // Оновлення цифрового часу
        const timeString = `${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
        document.getElementById("digitalTime").textContent = timeString;

        requestAnimationFrame(updateClock);
    }

    // Додаємо ефект клацання стрілок
    document.querySelectorAll('.hand').forEach(hand => {
        hand.addEventListener('click', () => {
            hand.style.transform += ' scale(1.1)';
            setTimeout(() => {
                hand.style.transform = hand.style.transform.replace(' scale(1.1)', '');
            }, 300);
        });
    });

    updateClock();
</script>

